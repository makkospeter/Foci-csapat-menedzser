<Window x:Class="Foci_csapat_menedzser.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Foci Csapat Menedzser" Height="450" Width="800">

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Játékos lista -->
        <ListBox x:Name="PlayerList"
                 Margin="5"
                 SelectionChanged="PlayerList_SelectionChanged">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Name}" FontSize="16"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!-- Jobb oldali adatok -->
        <StackPanel Grid.Column="1" Margin="20">

            <TextBlock Text="Név:"/>
            <TextBox x:Name="NameBox" Margin="0 5"/>

            <TextBlock Text="Életkor:"/>
            <TextBox x:Name="AgeBox" Margin="0 5"/>

            <TextBlock Text="Születési idő:"/>
            <TextBox x:Name="BirthBox" Margin="0 5"/>

            <TextBlock Text="Nemzetiség:"/>
            <TextBox x:Name="NationBox" Margin="0 5"/>

            <TextBlock Text="Piaci érték (€):"/>
            <TextBox x:Name="ValueBox" Margin="0 5"/>

            <StackPanel Orientation="Horizontal" Margin="0 10">
                <TextBlock Text="Játékképes:" VerticalAlignment="Center"/>
                <CheckBox x:Name="AvailableBox" Margin="10 0"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0 20">
                <Button Content="Mégse" Width="80" Margin="5" Click="Cancel_Click"/>
                <Button Content="Módosít" Width="80" Margin="5" Click="Modify_Click"/>
                <Button Content="OK" Width="80" Margin="5" Click="Ok_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
