<Window x:Class="Foci_csapat_menedzser.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Foci Csapat Menedzser" Height="700" Width="1200"
        WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded">

    <Window.Resources>
        <Style x:Key="PlayerCardStyle" TargetType="Border">
            <Setter Property="Background" Value="#F8F9FA"/>
            <Setter Property="BorderBrush" Value="#DEE2E6"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="Padding" Value="12"/>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0">
            <TextBlock Text="Játékos Keret" FontWeight="Bold" FontSize="18" Margin="0,0,0,15"/>

            <StackPanel Margin="0,0,0,10">
                <TextBlock Text="Szűrők:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <ComboBox x:Name="FilterComboBox" SelectionChanged="FilterComboBox_SelectionChanged">
                    <ComboBoxItem Content="Összes játékos" IsSelected="True"/>
                    <ComboBoxItem Content="Csak elérhetők"/>
                    <ComboBoxItem Content="Csak sérültek"/>
                    <ComboBoxItem Content="Lejárt szerződések"/>
                </ComboBox>
            </StackPanel>

            <ListBox x:Name="PlayerList" 
                     Height="500"
                     SelectionChanged="PlayerList_SelectionChanged"
                     ScrollViewer.VerticalScrollBarVisibility="Auto"
                     Background="Transparent"
                     BorderThickness="0">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border Style="{StaticResource PlayerCardStyle}">
                            <StackPanel>
                                <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="14"/>
                                <TextBlock Text="{Binding Position}" FontSize="12" Foreground="#6C757D"/>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding JerseyNumber}" FontSize="12" Foreground="#007BFF"/>
                                    <TextBlock Text=" • " Foreground="#6C757D"/>
                                    <TextBlock Text="{Binding Age}" FontSize="12" Foreground="#6C757D"/>
                                    <TextBlock Text=" éves • " Foreground="#6C757D"/>
                                    <TextBlock Text="{Binding PreferredFoot}" FontSize="10"/>
                                </StackPanel>
                                <TextBlock Text="{Binding NationalitiesDisplay}" FontSize="11" Foreground="#28A745"/>
                                <TextBlock Text="{Binding MarketValue, StringFormat='{}{0:N0} €'}" 
                                           FontSize="11" FontWeight="SemiBold" Foreground="#FD7E14"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </StackPanel>

        <ScrollViewer Grid.Column="1" Margin="20,0,0,0" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <TextBlock Text="Játékos Adatlap" FontWeight="Bold" FontSize="20" Margin="0,0,0,20"/>

                <Border Style="{StaticResource PlayerCardStyle}" Margin="0,0,0,20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock x:Name="PlayerNameText" FontSize="24" FontWeight="Bold" Margin="0,0,0,5"/>
                            <TextBlock x:Name="PlayerPositionText" FontSize="16" Foreground="#6C757D" Margin="0,0,0,10"/>

                            <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                <Border Background="#007BFF" CornerRadius="4" Padding="8,4">
                                    <TextBlock x:Name="JerseyNumberText" Foreground="White" FontWeight="Bold"/>
                                </Border>
                                <Border Background="#28A745" CornerRadius="4" Padding="8,4" Margin="10,0,0,0">
                                    <TextBlock x:Name="AgeText" Foreground="White"/>
                                </Border>
                                <Border Background="#FD7E14" CornerRadius="4" Padding="8,4" Margin="10,0,0,0">
                                    <TextBlock x:Name="MarketValueText" Foreground="White" FontWeight="SemiBold"/>
                                </Border>
                            </StackPanel>
                        </StackPanel>

                        <StackPanel Grid.Column="1" HorizontalAlignment="Right">
                            <TextBlock x:Name="AvailabilityStatusText" FontSize="14" FontWeight="Bold" 
                                       HorizontalAlignment="Right"/>
                            <TextBlock x:Name="ReturnDateText" FontSize="12" HorizontalAlignment="Right"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="0,0,10,0">
                        <GroupBox Header="Szerződés Kezelése" FontWeight="SemiBold" Margin="0,0,0,15">
                            <StackPanel Margin="10">
                                <StackPanel Orientation="Horizontal" Margin="0,5">
                                    <TextBlock Text="Csatlakozás:" FontWeight="SemiBold" Width="120"/>
                                    <DatePicker x:Name="JoinedTeamPicker" Width="150"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,5">
                                    <TextBlock Text="Szerződés vége:" FontWeight="SemiBold" Width="120"/>
                                    <DatePicker x:Name="ContractEndPicker" Width="150"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,5">
                                    <TextBlock Text="Státusz:" FontWeight="SemiBold" Width="120"/>
                                    <TextBlock x:Name="ContractStatusText" VerticalAlignment="Center"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,5">
                                    <TextBlock Text="Hátralévő idő:" FontWeight="SemiBold" Width="120"/>
                                    <TextBlock x:Name="ContractRemainingText" VerticalAlignment="Center"/>
                                </StackPanel>
                                <Button Content="Szerződés mentése" Click="SaveContract_Click" 
                                        Margin="0,10,0,0" Background="#FFC107" Foreground="Black"/>
                            </StackPanel>
                        </GroupBox>

                        <GroupBox Header="Személyes Adatok" FontWeight="SemiBold">
                            <StackPanel Margin="10">
                                <StackPanel Orientation="Horizontal" Margin="0,5">
                                    <TextBlock Text="Nemzetiségek:" FontWeight="SemiBold" Width="120"/>
                                    <TextBlock x:Name="NationalitiesText"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,5">
                                    <TextBlock Text="Születési dátum:" FontWeight="SemiBold" Width="120"/>
                                    <TextBlock x:Name="BirthDateText"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,5">
                                    <TextBlock Text="Magasság:" FontWeight="SemiBold" Width="120"/>
                                    <TextBlock x:Name="HeightText"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,5">
                                    <TextBlock Text="Erősebb láb:" FontWeight="SemiBold" Width="120"/>
                                    <TextBlock x:Name="PreferredFootText"/>
                                </StackPanel>
                            </StackPanel>
                        </GroupBox>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Margin="10,0,0,0">
                        <GroupBox Header="Elérhetőség Kezelése" FontWeight="SemiBold" Margin="0,0,0,15">
                            <StackPanel Margin="10">
                                <CheckBox x:Name="AvailableCheckBox" Content="Játékos elérhető" 
                                          FontWeight="SemiBold" Margin="0,0,0,10"/>

                                <StackPanel Orientation="Horizontal" Margin="0,5">
                                    <TextBlock Text="Ok:" FontWeight="SemiBold" Width="80"/>
                                    <TextBox x:Name="ReasonTextBox" Width="200" Height="60" TextWrapping="Wrap" AcceptsReturn="True"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,5">
                                    <TextBlock Text="Visszatérés:" FontWeight="SemiBold" Width="80"/>
                                    <DatePicker x:Name="ReturnDatePicker" Width="150"/>
                                </StackPanel>
                                <Button Content="Elérhetőség mentése" Click="SaveAvailability_Click" 
                                        Margin="0,10,0,0" Background="#6F42C1" Foreground="White"/>
                            </StackPanel>
                        </GroupBox>

                        <GroupBox Header="Műveletek" FontWeight="SemiBold">
                            <StackPanel Margin="10">
                                <Button Content="Összes változás mentése" Click="SaveAll_Click" 
                                        Margin="0,5" Background="#28A745" Foreground="White" FontWeight="Bold"/>
                            </StackPanel>
                        </GroupBox>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>