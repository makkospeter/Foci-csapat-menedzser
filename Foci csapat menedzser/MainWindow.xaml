<Window x:Class="Foci_csapat_menedzser.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Foci Csapat Menedzser" Height="450" Width="800">

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Bal oldali panel - Játékos lista -->
        <StackPanel Grid.Column="0">
            <TextBlock Text="Játékosok" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
            <ListBox x:Name="PlayerList" 
                     Height="300"
                     SelectionChanged="PlayerList_SelectionChanged"
                     ScrollViewer.VerticalScrollBarVisibility="Auto">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Name}" FontSize="14" Margin="2"/>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </StackPanel>

        <!-- Jobb oldali panel - Játékos adatok -->
        <StackPanel Grid.Column="1" Margin="20,0,0,0">
            <TextBlock Text="Játékos adatai" FontWeight="Bold" FontSize="16" Margin="0,0,0,15"/>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Név:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="0,5"/>
                <TextBox x:Name="NameBox" Grid.Row="0" Grid.Column="1" Margin="5"/>

                <TextBlock Text="Életkor:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="0,5"/>
                <TextBox x:Name="AgeBox" Grid.Row="1" Grid.Column="1" Margin="5"/>

                <TextBlock Text="Születési idő:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Margin="0,5"/>
                <TextBox x:Name="BirthBox" Grid.Row="2" Grid.Column="1" Margin="5"/>

                <TextBlock Text="Nemzetiség:" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Margin="0,5"/>
                <TextBox x:Name="NationBox" Grid.Row="3" Grid.Column="1" Margin="5"/>

                <TextBlock Text="Piaci érték (€):" Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" Margin="0,5"/>
                <TextBox x:Name="ValueBox" Grid.Row="4" Grid.Column="1" Margin="5"/>

                <CheckBox x:Name="AvailableBox" Grid.Row="5" Grid.Column="1" Margin="5" Content="Játékképes"/>
            </Grid>

            <!-- Gombok -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button Content="Mégse" Width="80" Margin="5" Click="Cancel_Click"/>
                <Button Content="Módosít" Width="80" Margin="5" Click="Modify_Click"/>
                <Button Content="OK" Width="80" Margin="5" Click="Ok_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>